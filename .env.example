# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/admin_app

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=24h

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3

# SMS Configuration
SMS_ENABLED=false
BULKSMS_USER=kistkart
BULKSMS_KEY=9ded48cbeaXX
BULKSMS_SENDER_ID=OTPSSS
BULKSMS_ENTITY_ID=1201159543060917386
BULKSMS_TEMPLATE_ID=1207161729866691748

# Rate Limiting
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=3

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Testing (Development Only)
TEST_ADMIN_MOBILE=9999999999
TEST_OTP=123456

# Firebase Configuration (for FCM notifications)
# Option 1: Use service account file path (recommended for development)
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# Option 2: Use individual environment variables (recommended for production)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# Android Management API Configuration
ANDROID_MANAGEMENT_ENABLED=true
ANDROID_MANAGEMENT_SERVICE_ACCOUNT_PATH=./config/android-manager-xxxxx.json
ANDROID_MANAGEMENT_ENTERPRISE_ID=enterprises/LC...
ANDROID_MANAGEMENT_DEFAULT_POLICY_ID=policy1

# Alternative: individual credentials (for production deployments)
# ANDROID_MANAGEMENT_PROJECT_ID=android-manager-5d65f
# ANDROID_MANAGEMENT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# ANDROID_MANAGEMENT_CLIENT_EMAIL=android-manager@android-manager-5d65f.iam.gserviceaccount.com

# QR Code Settings
QR_CODE_SIZE=512
QR_CODE_ERROR_CORRECTION=M

# Webhook Settings (for AMAPI events)
AMAPI_WEBHOOK_SECRET=<secret>

# Backend URL (for QR provisioning payload)
BACKEND_URL=<backend-api-url>
APP_SIGNATURE_CHECKSUM=your_app_signature_checksum

PROVISIONING_DEVICE_ADMIN_PACKAGE_DOWNLOAD_LOCATION=<url of the app>